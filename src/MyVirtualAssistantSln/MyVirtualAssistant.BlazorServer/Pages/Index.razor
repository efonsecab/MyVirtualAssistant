@page "/"

<PageTitle>Index</PageTitle>

<ul class="list-group">
    @foreach (var singleChatMessage in this.ChatMessages)
    {
        <li class="list-group-item">@singleChatMessage.Role - @singleChatMessage.Content</li>
    }
</ul>
<LoadingIndicator IsLoading="IsBusy"></LoadingIndicator>

@if (ShowListenButton)
{
    <button type="button" class="btn btn-primary" @onclick="OnListenButtonClickedAsync">Listen</button>
}
@Error